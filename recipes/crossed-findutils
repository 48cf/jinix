cross_compile=yes

name=crossed-findutils
from_source=findutils
revision=1
imagedeps="python"
hostdeps="gcc pkg-config"
deps="crossed-core-libs"

build() {
    cp -rp "${source_dir}"/. ./

        configure_script_path=./configure \
    autotools_configure \
        --disable-nls \
        --without-selinux

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
