name=pango
from_source=pango
revision=1
builddeps="base meson ninja"
deps="core-libs glib fontconfig freetype fribidi cairo xorg-proto libx11 libxtrans libxext harfbuzz libxft"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dintrospection=disabled \
        ${source_dir}

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
