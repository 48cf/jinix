cross_compile=yes

name=linux
from_source=linux
revision=1
imagedeps="base-devel bc libelf pahole cpio rsync"

build() {
    cp -rp "${source_dir}"/. ./

    make olddefconfig
    make mod2yesconfig
    make -j${parallelism}
}

package() {
    mkdir -p "${dest_dir}${prefix}"/share/linux
    cp arch/x86/boot/bzImage "${dest_dir}${prefix}"/share/linux/vmlinuz
}
