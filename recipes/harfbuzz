name=harfbuzz
from_source=harfbuzz
revision=1
builddeps="base meson ninja"
deps="core-libs graphite2 glib zlib freetype cairo icu"

build() {
    export CFLAGS="${CFLAGS/-fexceptions/}"
    export CXXFLAGS="${CXXFLAGS/-fexceptions/}"

    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dgraphite2=enabled \
        -Dglib=enabled \
        -Dgobject=disabled \
        -Dicu=enabled \
        -Dfreetype=enabled \
        -Dcairo=enabled \
        -Dintrospection=disabled \
        -Ddocs=disabled \
        -Dtests=disabled \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
