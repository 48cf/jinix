name=at-spi2-atk
from_source=at-spi2-atk
revision=1
builddeps="base meson ninja"
deps="core-libs at-spi2-core atk dbus glib libxml"

build() {
    meson setup \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --libdir=lib \
        --buildtype=release \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
