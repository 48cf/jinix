cross_compile=yes

name=crossed-bison
from_source=bison
revision=1
hostdeps="gcc pkg-config"
deps="crossed-core-libs"

build() {
    autotools_configure \
        --disable-static

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    # Remove static libraries
    rm -rf "${dest_dir}${prefix}"/lib/*.a

    post_package_strip
}
