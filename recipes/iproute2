name=iproute2
from_source=iproute2
revision=1
builddeps="base bison flex"
deps="core-libs"

build() {
    cp -rp "${source_dir}"/. ./

        SBINDIR=${prefix}/bin \
    ./configure \
        --prefix=${prefix} \
        --libdir=${prefix}/lib

    make -j${parallelism}
}

package() {
    make install DESTDIR="${dest_dir}" SBINDIR=${prefix}/bin

    post_package_strip
}
