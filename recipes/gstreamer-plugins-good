name=gstreamer-plugins-good
from_source=gstreamer-plugins-good
revision=1
builddeps="base gettext meson ninja"
deps="core-libs alsa-oss cairo flac gdk-pixbuf gstreamer-plugins-base libdv libsoup libsoup3 libvpx mpg123 nasm pulseaudio speex taglib v4l-utils"

build() {
    meson setup \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --libdir=lib \
        --buildtype=release \
        --wrap-mode=nodownload \
       -Dpackage-name="GStreamer 1.22.7" \
       ${source_dir}

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
