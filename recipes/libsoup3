name=libsoup3
from_source=libsoup3
revision=1
builddeps="base gettext meson ninja"
deps="core-libs brotli curl glib-networking libpsl libxml nghttp2 sqlite"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        --wrap-mode=nofallback \
        -Dvapi=disabled \
        -Dgssapi=disabled \
        -Dsysprof=disabled \
        ${source_dir}

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
