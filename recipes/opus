name=opus
from_source=opus
revision=1
builddeps="base meson ninja"
deps="core-libs"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Ddocdir=${prefix}/share/doc/opus-${version} \
        ${source_dir}

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
