name=cglm
from_source=cglm
revision=1
builddeps="base meson ninja"
deps="core-libs"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dbuild_tests=false \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
