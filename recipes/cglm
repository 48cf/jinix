name=cglm
from_source=cglm
revision=1
hostdeps="gcc pkg-config"
deps="core-libs"
imagedeps="meson ninja"

build() {
    meson setup \
        --cross-file ${base_dir}/build-support/cross_file.txt \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dbuild_tests=false \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install
}
