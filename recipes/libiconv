name=libiconv
from_source=libiconv
revision=1
hostdeps="gcc pkg-config"
deps="glibc libgcc libstdc++"
imagedeps="binutils"

build() {
    autotools_configure_lib  \
        --disable-nls

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip

    ${OS_TRIPLET}-strip "${dest_dir}${prefix}"/lib/{libcharset.so.1.0.0,libiconv.so.2.6.1}
}
