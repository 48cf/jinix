name=xf86-input-libinput
from_source=xf86-input-libinput
revision=1
hostdeps="gcc pkg-config"
deps="core-libs libinput xorg-server xorg-proto"

build() {
    autotools_configure_lib

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    cp -rpv "${dest_dir}"/sysroot/* "${dest_dir}"/
    rm -rf "${dest_dir}"/sysroot

    post_package_strip
}
