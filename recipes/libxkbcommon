name=libxkbcommon
from_source=libxkbcommon
revision=1
builddeps="base bison meson ninja"
deps="core-libs libxcb libxml xkeyboard-config"

build() {
    meson setup \
        --prefix=/usr \
        --libdir=lib \
        --buildtype=release \
        -Denable-docs=false \
        -Denable-x11=true \
        -Denable-wayland=false \
        "${source_dir}"

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    mkdir -p "${dest_dir}${prefix}/share/X11/xkb"

    post_package_strip
}
