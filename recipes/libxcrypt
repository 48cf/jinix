cross_compile=yes

name=libxcrypt
from_source=libxcrypt
revision=1
hostdeps="gcc pkg-config"
deps="glibc libgcc libstdc++"
imagedeps="python-passlib"

build() {
    autotools_configure_lib \
        --enable-obsolete-api=yes \
        --disable-xcrypt-compat-files

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
