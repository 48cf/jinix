cross_compile=yes

name=crossed-mpc
from_source=mpc
revision=1
imagedeps="gcc"
hostdeps="gcc pkg-config"
deps="crossed-core-libs crossed-gmp crossed-mpfr"

build() {
    autotools_configure_lib

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
