name=freetype
from_source=freetype
revision=1
hostdeps="gcc pkg-config"
deps="core-libs bzip2 libpng zlib"
imagedeps="gcc"

build() {
    autotools_configure_lib \
        --with-harfbuzz=no

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
    ${OS_TRIPLET}-strip "${dest_dir}${prefix}/lib/libfreetype.so.6.20.1"
}
