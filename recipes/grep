name=grep
from_source=grep
revision=1
hostdeps="gcc pkg-config"
deps="core-libs pcre2"
imagedeps="gperf"

build() {
    cp -rp "${source_dir}"/. ./

        configure_script_path=./configure \
    autotools_configure \
        --disable-nls

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
