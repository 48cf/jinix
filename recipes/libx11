name=libx11
from_source=libx11
revision=1
builddeps="base"
deps="core-libs xorg-util-macros xorg-proto libxcb libxtrans"

build() {
    autotools_configure_lib \
        --disable-ipv6 \
        --disable-malloc0returnsnull

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
