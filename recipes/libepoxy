name=libepoxy
from_source=libepoxy
revision=1
builddeps="base meson ninja"
deps="core-libs mesa xorg-proto libx11"

build() {
    meson setup \
        --prefix=${prefix} \
        --buildtype=release \
        -Degl=yes \
        -Dtests=false \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
