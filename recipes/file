cross_compile=yes

name=file
from_source=file
revision=1
imagedeps="gcc"
hostdeps="gcc pkg-config"
deps="core-libs bzip2 xz-utils zlib zstd"

build() {
    mkdir -p ./build
    cd ./build

    if ! [ -f built ]; then
        # Build a host version of file
        autotools_configure \
            --disable-shared \
            --disable-libseccomp \
            --disable-bzlib \
            --disable-xzlib \
            --disable-zlib

        make -j${parallelism} -C src magic.h
        make -j${parallelism} -C src file
        touch built
    fi

    cd ..

        FILE=${base_dir}/builds/file/build/src/file \
    autotools_configure_lib \
        --enable-fsect-man5 \
        --enable-bzlib \
        --enable-xzlib \
        --enable-zlib \
        --enable-zstdlib \
        --disable-libseccomp

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
