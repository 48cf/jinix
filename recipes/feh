name=feh
from_source=feh
revision=1
builddeps="base"
deps="core-libs curl file imlib2 libxinerama libxt"

build() {
    cp -rp "${source_dir}"/. ./

    make -j${parallelism} \
        PREFIX="${prefix}" \
        exif=0 \
        help=1 \
        inotify=1 \
        magic=1 \
        stat64=1
}

package() {
    make PREFIX="${prefix}" DESTDIR="${dest_dir}" install

    post_package_strip
}
