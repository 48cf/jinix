name=ace-of-penguins
from_source=ace-of-penguins
revision=1
imagedeps="gcc libpng"
hostdeps="gcc pkg-config"
deps="core-libs libx11 libxpm libpng zlib"

build() {
    autotools_configure \
        --disable-static

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
