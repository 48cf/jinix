name=libinput
from_source=libinput
revision=1
builddeps="base meson ninja"
deps="core-libs eudev libevdev mtdev"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Ddebug-gui=false \
        -Ddocumentation=false \
        -Dlibwacom=false \
        -Dtests=false \
        ${source_dir}

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
