name=openrc
from_source=openrc
revision=1
builddeps="base meson ninja"
deps="core-libs kbd ncurses net-tools pam psmisc shadow"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --sbindir=bin \
        --buildtype=release \
        -Dos=Linux \
        -Dpam=true \
        -Dsysvinit=true \
        -Dtermcap=ncurses \
        ${source_dir}

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    sed -i 's/#agetty_options=""/agetty_options="--autologin root"/' "${dest_dir}"/etc/conf.d/agetty

    post_package_strip
}
