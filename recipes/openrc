name=openrc
from_source=openrc
revision=1
imagedeps="meson ninja"
hostdeps="gcc pkg-config"
deps="core-libs ncurses pam psmisc"

build() {
    meson setup \
        --cross-file ${base_dir}/build-support/cross_file.txt \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dos=Linux \
		-Dpam=true \
		-Dtermcap=ncurses \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

	# Move files installed in /usr/sbin to /usr/bin
    mv -v ${dest_dir}${prefix}/sbin/* ${dest_dir}${prefix}/bin
    rm -rvf ${dest_dir}${prefix}/sbin

    post_package_strip
}
