name=openrc
from_source=openrc
revision=1
builddeps="base meson ninja"
deps="core-libs kbd ncurses net-tools pam psmisc shadow"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dos=Linux \
		-Dpam=true \
		-Dtermcap=ncurses \
        ${source_dir}

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

	# Move files installed in /usr/sbin to /usr/bin
    mv -v ${dest_dir}${prefix}/sbin/* ${dest_dir}${prefix}/bin
    rm -rvf ${dest_dir}${prefix}/sbin

    post_package_strip
}
