name=libdrm
from_source=libdrm
revision=1
builddeps="base meson ninja"
deps="core-libs libpciaccess"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dudev=true \
        -Detnaviv=disabled \
        -Dfreedreno=disabled \
        -Dvc4=disabled \
        -Dvalgrind=disabled \
        -Dinstall-test-programs=true \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
