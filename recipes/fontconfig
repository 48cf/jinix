name=fontconfig
from_source=fontconfig
revision=1
builddeps="base gperf python"
deps="core-libs freetype libexpat libxml"

build() {
    autotools_configure \
        --disable-static \
        --disable-docs \
        --disable-nls \
        --enable-libxml2

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
