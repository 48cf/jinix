name=fontconfig
from_source=fontconfig
revision=1
hostdeps="gcc pkg-config"
deps="core-libs freetype libexpat libxml"
imagedeps="python gperf"

build() {
    autotools_configure \
        --disable-static \
        --disable-docs \
        --disable-nls \
        --enable-libxml2

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
