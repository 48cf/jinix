name=libtiff
from_source=libtiff
revision=1
builddeps="base"
deps="core-libs freeglut libjpeg-turbo zlib zstd xz-utils"

build() {
    autotools_configure_lib \
        --without-x \
        --enable-zlib \
        --enable-zstd \
        --enable-jpeg \
        --enable-lzma \
        --disable-webp \
        --enable-cxx

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
