name=libtiff
from_source=libtiff
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs freeglut libjpeg-turbo zlib zstd xz-utils"

build() {
    ${source_dir}/configure \
        --host=${OS_TRIPLET} \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --with-sysroot=${sysroot_dir} \
        --enable-shared \
        --without-x \
        --enable-zlib \
        --enable-zstd \
        --enable-jpeg \
        --enable-lzma \
        --disable-webp \
        --enable-cxx

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
