name=perl-http-message
from_source=perl-http-message
revision=1
builddeps="base"
deps="core-libs perl perl-clone perl-encode-locale perl-http-date perl-io-html perl-lwp-mediatypes perl-uri"

build() {
    cp -rp "${source_dir}"/. ./
    perl Makefile.PL INSTALLDIRS=vendor
    make
}

package() {
    make DESTDIR="${dest_dir}" install

    find "${dest_dir}" -name '.packlist' -delete
    find "${dest_dir}" -name '*.pod' -delete
}
