name=libsndfile
from_source=libsndfile
revision=1
builddeps="base python"
deps="core-libs alsa-lib flac libvorbis opus sqlite"

build() {
    autotools_configure_lib \
        --docdir=${prefix}/share/doc/libsndfile-${version}

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
