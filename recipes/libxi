name=libxi
from_source=libxi
revision=1
hostdeps="gcc pkg-config"
deps="core-libs xorg-util-macros xorg-proto libx11 libxtrans libxext libxfixes"

build() {
    autotools_configure_lib \
        --disable-malloc0returnsnull

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
