cross_compile=yes

name=crossed-gawk
from_source=gawk
revision=1
hostdeps="gcc pkg-config"
deps="crossed-core-libs crossed-mpfr crossed-gmp crossed-readline"

build() {
    cp -rp "${source_dir}"/. ./

        configure_script_path=./configure \
    autotools_configure \
        --disable-nls

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
