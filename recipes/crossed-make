cross_compile=yes

name=crossed-make
from_source=make
revision=1
hostdeps="gcc pkg-config"
deps="crossed-core-libs"

build() {
    cp -rp "${source_dir}"/. ./

        configure_script_path=./configure \
    autotools_configure \
        --disable-nls

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
