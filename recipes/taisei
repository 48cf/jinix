name=taisei
from_source=taisei
revision=1
builddeps="base meson ninja"
deps="core-libs freetype libpng sdl2 libwebp zlib cglm openssl libzip"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Ddocs=false \
        -Da_sdl2mixer=false \
        -Da_default=null \
        -Db_lto=false \
        ${source_dir}

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
