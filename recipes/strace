name=strace
from_source=strace
revision=1
imagedeps="gcc"
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs"

build() {
    ${source_dir}/configure \
        --prefix=${prefix} \
        --host=${OS_TRIPLET} \
        --disable-gcc-Werror \
        --disable-static

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
