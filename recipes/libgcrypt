name=libgcrypt
from_source=libgcrypt
revision=1
builddeps="base"
deps="core-libs libgpg-error"

build() {
    autotools_configure_lib \
        --disable-doc \
        --disable-dev-random \
        --disable-asm \
        --with-libgpg-error-prefix=${sysroot_dir}/${prefix}

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
