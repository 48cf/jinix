name=libgpg-error
from_source=libgpg-error
revision=1
imagedeps="gcc"
hostdeps="gcc pkg-config"
deps="core-libs"

build() {
    autotools_configure_lib  \
        --disable-nls \
        --disable-doc

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
