name=xkeyboard-config
from_source=xkeyboard-config
revision=1
hostdeps="gcc pkg-config"
deps="core-libs xorg-proto libx11"
imagedeps="python"

build() {
    autotools_configure \
        --disable-nls \
        --with-xkb-rules-symlink=xorg

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
