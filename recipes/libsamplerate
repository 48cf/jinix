name=libsamplerate
from_source=libsamplerate
revision=1
builddeps="base"
deps="core-libs alsa-lib libsndfile"

build() {
    autotools_configure_lib \
        --docdir="${prefix}/share/doc/libsamplerate-${version}"

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
