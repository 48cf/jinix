name=duktape
from_source=duktape
revision=1
builddeps="base"
deps="core-libs"

build() {
    cp -rf "${source_dir}"/. ./

    sed -i 's/-Os//' Makefile.sharedlibrary
    make -j${parallelism} -f Makefile.sharedlibrary INSTALL_PREFIX=${prefix}
}

package() {
    DESTDIR="${dest_dir}" make -f Makefile.sharedlibrary INSTALL_PREFIX=${prefix} install

    post_package_strip
}
