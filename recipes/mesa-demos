name=mesa-demos
from_source=mesa-demos
revision=1
builddeps="base"
deps="core-libs freetype mesa glu libx11 libxext"

build() {
    autotools_configure \
        --disable-static \
        --enable-autotools \
        --disable-gles1 \
        --disable-osmesa \
        --disable-libdrm \
        --with-system-data-files \
        --with-glut=no

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
