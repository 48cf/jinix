name=libxml
from_source=libxml
revision=1
builddeps="base"
deps="core-libs zlib"

build() {
    autotools_configure_lib \
        --without-threads \
        --disable-ipv6 \
        --without-python

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
