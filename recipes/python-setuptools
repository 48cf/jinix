name=python-setuptools
from_source=python-setuptools
builddeps="base python"
deps="core-libs"

build() {
    cp -rp "${source_dir}"/. ./

    python setup.py build
}

package() {
    # XXX enable optimizations
    python setup.py install \
        --prefix="${prefix}" \
        --root="${dest_dir}" \
        --skip-build
}
