cross_compile=yes

name=crossed-grep
from_source=grep
revision=1
imagedeps="gperf"
hostdeps="gcc pkg-config"
deps="crossed-core-libs crossed-pcre2"

build() {
    cp -rp "${source_dir}"/. ./

        configure_script_path=./configure \
    autotools_configure \
        --disable-nls

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
