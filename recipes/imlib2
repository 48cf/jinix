name=imlib2
from_source=imlib2
revision=1
builddeps="base"
deps="core-libs bzip2 freetype libjpeg-turbo libpng libtiff libxext xz-utils"

build() {
    autotools_configure_lib \
        --enable-amd64

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
