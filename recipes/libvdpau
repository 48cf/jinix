name=libvdpau
from_source=libvdpau
revision=1
builddeps="base meson ninja strace"
deps="core-libs libxext xorg-proto"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Ddocumentation=false \
        -Ddri2=true \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
