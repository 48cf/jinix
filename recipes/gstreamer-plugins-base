name=gstreamer-plugins-base
from_source=gstreamer-plugins-base
revision=1
builddeps="base gettext meson ninja"
deps="base gstreamer alsa-lib graphene iso-codes libgudev libjpeg-turbo libogg libpng libtheora libvorbis libxi libxv mesa pango opus sdl2"

build() {
    meson setup \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --libdir=lib \
        --buildtype=release \
        --wrap-mode=nodownload \
       -Dpackage-name="GStreamer 1.22.7" \
       ${source_dir}

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
