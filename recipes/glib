name=glib
from_source=glib
revision=1
builddeps="base meson ninja python-setuptools"
deps="core-libs pcre2 libffi zlib"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dxattr=false \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
