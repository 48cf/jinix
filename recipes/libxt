name=libxt
from_source=libxt
revision=1
builddeps="base"
deps="core-libs xorg-util-macros xorg-proto libx11 libxtrans libsm libice"

build() {
    autotools_configure_lib \
        --disable-malloc0returnsnull  \
        --with-appdefaultdir=/etc/X11/app-defaults

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
