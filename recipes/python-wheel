name=python-wheel
from_source=python-wheel
builddeps="base python python-build python-installer"
deps="core-libs"

build() {
    cp -rp "${source_dir}"/. ./

    python -m build \
        --wheel \
        --no-isolation
}

package() {
    python -m installer \
        --destdir="${dest_dir}" \
        dist/*.whl
}
