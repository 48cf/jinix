name=cairo
from_source=cairo
revision=1
builddeps="base"
deps="core-libs freetype fontconfig libpng pixman libxcb libx11 libxext mesa libxrender glib"

build() {
    autotools_configure_lib \
        --enable-xlib-xcb \
        --enable-xml \
        --enable-tee \
        --enable-gl

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
