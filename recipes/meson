name=meson
from_source=meson
builddeps="base python python-build python-installer python-setuptools python-wheel"
deps="core-libs"

build() {
    cp -rp "${source_dir}"/. ./

    python -m build \
        --wheel \
        --no-isolation
}

package() {
    python -m installer \
        --destdir="${dest_dir}" \
        dist/*.whl
}
