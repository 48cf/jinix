name=gstreamer
from_source=gstreamer
revision=1
builddeps="base bison flex gettext meson ninja"
deps="base glib libcap"

build() {
    meson setup \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --libdir=lib \
        --buildtype=release \
       -Dgst_debug=false \
       -Dpackage-name="GStreamer 1.22.7" \
       ${source_dir}

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
