cross_compile=yes

name=crossed-xz-utils
from_source=xz-utils
revision=1
hostdeps="gcc pkg-config"
deps="crossed-core-libs crossed-zlib"

build() {
    autotools_configure \
        --disable-static

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
