name=python-mako
from_source=python-mako
builddeps="base python python-setuptools"
deps="core-libs python-markupsafe"

build() {
    cp -rp "${source_dir}"/. ./

    python setup.py build
}

package() {
    # XXX enable optimizations
    python setup.py install \
        --prefix="${prefix}" \
        --root="${dest_dir}"
}
