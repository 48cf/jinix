name=atk
from_source=atk
revision=1
imagedeps="meson ninja"
hostdeps="gcc pkg-config"
deps="core-libs glib"

build() {
    meson setup \
        --cross-file ${base_dir}/build-support/cross_file.txt \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dintrospection=false \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
