name=atk
from_source=atk
revision=1
imagedeps="meson ninja"
hostdeps="gcc pkg-config"
deps="core-libs glib"

build() {
    meson setup \
        --cross-file ${base_dir}/build-support/cross_file.txt \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dintrospection=false \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    ${OS_TRIPLET}-strip "${dest_dir}${prefix}"/lib/libatk-1.0.so.0.23809.1
}
