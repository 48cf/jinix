name=findutils
from_source=findutils
revision=1
hostdeps="gcc pkg-config"
deps="core-libs"
imagedeps="python"

build() {
    cp -rp "${source_dir}"/. ./

        configure_script_path=./configure \
    autotools_configure \
        --disable-nls \
        --without-selinux

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
