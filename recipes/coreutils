name=coreutils
from_source=coreutils
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="core-libs tzdata"
imagedeps="gcc gperf"

build() {
    cp -rp "${source_dir}"/. ./

    ./configure    \
        --host=${OS_TRIPLET}    \
        --prefix=${prefix}     \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-nls

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
