cross_compile=yes

name=coreutils
from_source=coreutils
revision=1
hostdeps="gcc pkg-config"
deps="core-libs tzdata"
imagedeps="gcc gperf"

build() {
    cp -rp "${source_dir}"/. ./

        configure_script_path=./configure \
    autotools_configure \
        --enable-no-install-program=uptime,kill

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
