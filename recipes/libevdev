name=libevdev
from_source=libevdev
revision=1
imagedeps="meson ninja"
hostdeps="gcc pkg-config"
deps="core-libs eudev mtdev"

build() {
    meson setup \
        --cross-file ${base_dir}/build-support/cross_file.txt \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Ddocumentation=disabled \
        -Dtests=disabled \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
