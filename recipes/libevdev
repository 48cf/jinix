name=libevdev
from_source=libevdev
revision=1
builddeps="base meson ninja"
deps="core-libs eudev mtdev"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Ddocumentation=disabled \
        -Dtests=disabled \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
