name=lzip
from_source=lzip
revision=1
builddeps="base"
deps="core-libs"

build() {
    autotools_configure \
        CPPFLAGS="$CPPFLAGS" \
        CFLAGS="$CFLAGS" \
        LDFLAGS="$LDFLAGS"

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
