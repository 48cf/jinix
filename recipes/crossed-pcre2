cross_compile=yes

name=crossed-pcre2
from_source=pcre2
revision=1
hostdeps="gcc pkg-config"
deps="crossed-core-libs crossed-bzip2 crossed-ncurses crossed-readline crossed-zlib"

build() {
    autotools_configure \
        --disable-static \
        --enable-unicode \
        --enable-jit \
        --enable-pcre2-16 \
        --enable-pcre2-32 \
        --enable-pcre2grep-libz \
        --enable-pcre2grep-libbz2 \
        --enable-pcre2test-libreadline

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
