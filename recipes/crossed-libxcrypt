cross_compile=yes

name=crossed-libxcrypt
from_source=libxcrypt
revision=1
imagedeps="python-passlib"
hostdeps="gcc pkg-config"
deps="crossed-glibc crossed-libgcc crossed-libstdc++"

build() {
    autotools_configure_lib \
        --enable-obsolete-api=yes \
        --disable-xcrypt-compat-files

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
