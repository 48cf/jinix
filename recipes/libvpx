name=libvpx
from_source=libvpx
revision=1
builddeps="base nasm which perl"
deps="core-libs"

build() {
    ${source_dir}/configure \
        --prefix=${prefix} \
        --enable-shared \
        --disable-static

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
