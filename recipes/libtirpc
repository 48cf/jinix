name=libtirpc
from_source=libtirpc
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs"

build() {
    ${source_dir}/configure \
        --prefix=${prefix} \
        --host=${OS_TRIPLET} \
        --sysconfdir=/etc \
        --disable-static \
        --disable-gssapi

    make -j${parallelism}
}

package() {
    DESTDIR=${dest_dir} make install
}
