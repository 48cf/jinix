cross_compile=yes

name=crossed-file
from_source=file
revision=1
imagedeps="gcc"
hostdeps="gcc pkg-config"
deps="crossed-core-libs crossed-bzip2 crossed-xz-utils crossed-zlib crossed-zstd"

build() {
    mkdir -p ./build
    cd ./build

    # XXX build as a host dep
    if ! [ -f built ]; then
        # Build a host version of file
        autotools_configure \
            --disable-shared \
            --disable-libseccomp \
            --disable-bzlib \
            --disable-xzlib \
            --disable-zlib

        make -j${parallelism} -C src magic.h
        make -j${parallelism} -C src file
        touch built
    fi

    cd ..

        FILE=${base_dir}/builds/file/build/src/file \
    autotools_configure_lib \
        --enable-fsect-man5 \
		--enable-bzlib \
		--enable-xzlib \
		--enable-zlib \
		--enable-zstdlib \
        --disable-libseccomp

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
