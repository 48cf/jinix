name=twm
revision=1
from_source=twm
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs xorg-server xsetroot"

build() {
        STRIP=${OS_TRIPLET}-strip \
    ${source_dir}/configure \
        --host=${OS_TRIPLET} \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var

    make -j${parallelism}
}

package() {
    make DESTDIR=${dest_dir} install-strip
}
