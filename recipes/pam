name=pam
from_source=pam
revision=1
imagedeps="byacc flex gcc gettext"
hostdeps="gcc pkg-config"
deps="core-libs libtirpc libnsl"

build() {
        LDFLAGS="-lintl" \
    autotools_configure \
        --enable-securedir=${prefix}/lib/security \
        --docdir=${prefix}/share/doc/Linux-PAM-${version}

    make -j${parallelism}
}

package() {
    DESTDIR=${dest_dir} make install

    post_package_strip
}
