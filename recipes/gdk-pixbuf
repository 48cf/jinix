name=gdk-pixbuf
from_source=gdk-pixbuf
revision=1
builddeps="base meson ninja"
deps="core-libs glib libjpeg-turbo libpng libx11 libtiff"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --buildtype=release \
        -Dgio_sniffing=false \
        -Dman=false \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
