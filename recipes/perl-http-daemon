name=perl-http-daemon
from_source=perl-http-daemon
revision=1
builddeps="base"
deps="core-libs perl perl-http-date perl-http-message perl-lwp-mediatypes"

build() {
    cp -rp "${source_dir}"/. ./
    perl Makefile.PL INSTALLDIRS=vendor
    make
}

package() {
    make DESTDIR="${dest_dir}" install

    find "${dest_dir}" -name '.packlist' -delete
    find "${dest_dir}" -name '*.pod' -delete
}
