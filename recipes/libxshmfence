name=libxshmfence
from_source=libxshmfence
revision=1
hostdeps="gcc pkg-config"
deps="core-libs xorg-util-macros xorg-proto libx11 libxtrans"

build() {
    autotools_configure_lib \
        --disable-futex

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
