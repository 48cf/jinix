name=libxcb
from_source=libxcb
revision=1
hostdeps="gcc pkg-config"
deps="core-libs xorg-util-macros xorg-proto libxau libxdmcp xcb-proto"
imagedeps="python"

build() {
    autotools_configure_lib
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
