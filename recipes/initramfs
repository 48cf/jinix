name=initramfs
from_source=base-files
revision=1
builddeps="base busybox dracut eudev linux"

build() {
    dracut --kver 6.6.7 --kmoddir /usr/lib/modules/6.6.7 --add busybox -N --strip --zstd --verbose initramfs.img 6.6.7
}

package() {
    mkdir -p "${dest_dir}${prefix}"/share/initramfs
    cp initramfs.img "${dest_dir}${prefix}"/share/initramfs/
}
