name=libxinerama
from_source=libxinerama
revision=1
builddeps="base"
deps="core-libs libx11 libxext xorg-util-macros xorg-proto"

build() {
    autotools_configure_lib \
        --disable-malloc0returnsnull

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
