name=xorg-xinput
from_source=xorg-xinput
revision=1
hostdeps="gcc pkg-config"
deps="core-libs libx11 libxext libxrandr libxi libxinerama xorg-proto"

build() {
    autotools_configure \
        --without-xinerama

    make -j${parallelism}
}

package() {
    make install DESTDIR="${dest_dir}"

    post_package_strip
}
