name=bash
from_source=bash
revision=1
imagedeps="gcc"
hostdeps="gcc pkg-config"
deps="core-libs ncurses readline"

build() {
    autotools_configure \
        --without-bash-malloc  \
        --with-installed-readline="${sysroot}/usr/lib" \
        --disable-nls

    make -j${parallelism}
}

package() {
    make install DESTDIR="${dest_dir}"
    ln -s bash "${dest_dir}${prefix}"/bin/sh

    post_package_strip
}
