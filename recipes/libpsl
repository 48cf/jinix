name=libpsl
from_source=libpsl
revision=1
builddeps="base meson ninja"
deps="core-libs libidn2 libunistring"

build() {
    meson setup \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --libdir=lib \
        --buildtype=release \
        ${source_dir}

    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install

    post_package_strip
}
