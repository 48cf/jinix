name=libxxf86vm
from_source=libxxf86vm
revision=1
builddeps="base"
deps="core-libs xorg-util-macros xorg-proto libx11 libxtrans libxext"

build() {
    autotools_configure_lib \
        --disable-malloc0returnsnull

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
