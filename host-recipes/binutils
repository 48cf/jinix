name=binutils
from_source=binutils
revision=1
imagedeps="gcc"
hostdeps="pkg-config"

build() {
    "${source_dir}"/configure \
        --prefix="${prefix}" \
        --target=${OS_TRIPLET} \
        --with-sysroot="${sysroot_dir}" \
        --disable-nls \
        --disable-werror \
        --enable-cet \
        --enable-colored-disassembly \
        --enable-default-execstack=no \
        --enable-deterministic-archives \
        --enable-gold \
        --enable-ld=default \
        --enable-new-dtags \
        --enable-relro \
        --enable-shared \
        --enable-threads

    make -j${parallelism} all
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
